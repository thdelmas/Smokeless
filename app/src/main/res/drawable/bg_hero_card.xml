<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_primary_glow" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    <!-- Inner card -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/surface_elevated"
                android:endColor="@color/surface_card" />
            <corners android:radius="26dp" />
        </shape>
    </item>
</layer-list>

